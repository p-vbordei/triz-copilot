{
  "mcpServer": {
    "name": "TRIZ Engineering Co-Pilot",
    "version": "1.0.0",
    "description": "Systematic innovation assistance using TRIZ methodology",
    "tools": [
      {
        "name": "analyze_contradiction",
        "description": "Analyze technical contradictions using TRIZ methodology",
        "inputSchema": {
          "type": "object",
          "properties": {
            "problem_statement": {
              "type": "string",
              "description": "Description of the technical problem to solve",
              "minLength": 10,
              "maxLength": 2000
            },
            "improving_parameter": {
              "type": "string", 
              "description": "The parameter that needs to be improved",
              "examples": ["Weight", "Speed", "Strength", "Cost"]
            },
            "worsening_parameter": {
              "type": "string",
              "description": "The parameter that gets worse when improving the first",
              "examples": ["Strength", "Cost", "Weight", "Complexity"]
            },
            "system_context": {
              "type": "string",
              "description": "Additional context about the system or domain",
              "required": false
            }
          },
          "required": ["problem_statement", "improving_parameter", "worsening_parameter"]
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "contradiction_type": {
              "type": "string",
              "enum": ["technical", "physical", "administrative"]
            },
            "improving_param_id": {
              "type": "integer",
              "minimum": 1,
              "maximum": 39
            },
            "worsening_param_id": {
              "type": "integer", 
              "minimum": 1,
              "maximum": 39
            },
            "recommended_principles": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "principle_id": {"type": "integer", "minimum": 1, "maximum": 40},
                  "principle_name": {"type": "string"},
                  "relevance_score": {"type": "number", "minimum": 0, "maximum": 1},
                  "explanation": {"type": "string"}
                }
              }
            },
            "confidence_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["contradiction_type", "recommended_principles", "confidence_score"]
        }
      },
      {
        "name": "generate_solutions",
        "description": "Generate solution concepts using TRIZ inventive principles",
        "inputSchema": {
          "type": "object",
          "properties": {
            "problem_analysis": {
              "type": "string",
              "description": "Results from contradiction analysis"
            },
            "selected_principles": {
              "type": "array",
              "items": {"type": "integer", "minimum": 1, "maximum": 40},
              "description": "TRIZ principles to apply"
            },
            "constraints": {
              "type": "object",
              "properties": {
                "budget": {"type": "string", "enum": ["low", "medium", "high"]},
                "timeline": {"type": "string", "enum": ["short", "medium", "long"]},
                "technical_maturity": {"type": "string", "enum": ["research", "development", "commercial"]},
                "regulatory": {"type": "array", "items": {"type": "string"}}
              },
              "required": false
            }
          },
          "required": ["problem_analysis", "selected_principles"]
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "solution_concepts": {
              "type": "array",
              "minItems": 3,
              "maxItems": 5,
              "items": {
                "type": "object",
                "properties": {
                  "concept_title": {"type": "string"},
                  "description": {"type": "string", "minLength": 100},
                  "applied_principles": {"type": "array", "items": {"type": "integer"}},
                  "principle_applications": {"type": "object"},
                  "pros": {"type": "array", "items": {"type": "string"}},
                  "cons": {"type": "array", "items": {"type": "string"}},
                  "feasibility_score": {"type": "number", "minimum": 0, "maximum": 1},
                  "innovation_level": {"type": "integer", "minimum": 1, "maximum": 5},
                  "estimated_cost": {"type": "string", "enum": ["low", "medium", "high"]},
                  "development_time": {"type": "string", "enum": ["short", "medium", "long"]}
                },
                "required": ["concept_title", "description", "applied_principles", "pros", "cons"]
              }
            },
            "materials_recommendations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "material_name": {"type": "string"},
                  "material_class": {"type": "string"},
                  "properties": {"type": "object"},
                  "advantages": {"type": "array", "items": {"type": "string"}},
                  "disadvantages": {"type": "array", "items": {"type": "string"}},
                  "cost_index": {"type": "number", "minimum": 1, "maximum": 10},
                  "availability": {"type": "string", "enum": ["research", "limited", "commercial", "commodity"]}
                }
              }
            }
          },
          "required": ["solution_concepts"]
        }
      },
      {
        "name": "function_analysis", 
        "description": "Perform TRIZ function analysis on a technical system",
        "inputSchema": {
          "type": "object",
          "properties": {
            "system_description": {
              "type": "string",
              "description": "Description of the system to analyze",
              "minLength": 20
            },
            "analysis_level": {
              "type": "string",
              "enum": ["component", "subsystem", "system", "supersystem"],
              "default": "system"
            },
            "focus_areas": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Specific functions or areas to analyze",
              "required": false
            }
          },
          "required": ["system_description"]
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "useful_functions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "function_name": {"type": "string"},
                  "description": {"type": "string"},
                  "performance_level": {"type": "string", "enum": ["insufficient", "adequate", "excessive"]}
                }
              }
            },
            "harmful_functions": {
              "type": "array", 
              "items": {
                "type": "object",
                "properties": {
                  "function_name": {"type": "string"},
                  "description": {"type": "string"},
                  "severity": {"type": "string", "enum": ["low", "medium", "high", "critical"]}
                }
              }
            },
            "function_interactions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "subject": {"type": "string"},
                  "action": {"type": "string"},
                  "object": {"type": "string"},
                  "interaction_type": {"type": "string", "enum": ["useful", "harmful", "insufficient", "excessive"]}
                }
              }
            },
            "recommendations": {
              "type": "array",
              "items": {"type": "string"}
            }
          },
          "required": ["useful_functions", "harmful_functions", "recommendations"]
        }
      },
      {
        "name": "get_principle_details",
        "description": "Retrieve detailed information about a specific TRIZ inventive principle",
        "inputSchema": {
          "type": "object",
          "properties": {
            "principle_id": {
              "type": "integer",
              "minimum": 1,
              "maximum": 40,
              "description": "TRIZ principle number (1-40)"
            }
          },
          "required": ["principle_id"]
        },
        "outputSchema": {
          "type": "object", 
          "properties": {
            "principle_id": {"type": "integer"},
            "principle_name": {"type": "string"},
            "description": {"type": "string"},
            "sub_principles": {"type": "array", "items": {"type": "string"}},
            "examples": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "problem": {"type": "string"},
                  "solution": {"type": "string"},
                  "domain": {"type": "string"},
                  "outcome": {"type": "string"}
                }
              }
            },
            "patent_examples": {"type": "array", "items": {"type": "string"}},
            "domains": {"type": "array", "items": {"type": "string"}},
            "related_principles": {"type": "array", "items": {"type": "integer"}},
            "usage_frequency": {"type": "string", "enum": ["low", "medium", "high"]},
            "innovation_level": {"type": "integer", "minimum": 1, "maximum": 5}
          },
          "required": ["principle_id", "principle_name", "description", "examples"]
        }
      },
      {
        "name": "manage_session",
        "description": "Manage TRIZ problem-solving session state",
        "inputSchema": {
          "type": "object", 
          "properties": {
            "action": {
              "type": "string",
              "enum": ["create", "continue", "reset", "save", "load"],
              "description": "Session management action"
            },
            "session_id": {
              "type": "string",
              "description": "Session identifier for continue/reset/save/load actions",
              "required": false
            },
            "session_data": {
              "type": "object",
              "description": "Session state data for save action",
              "required": false
            }
          },
          "required": ["action"]
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "session_id": {"type": "string"},
            "current_stage": {
              "type": "string",
              "enum": ["problem_definition", "contradiction_analysis", "principle_selection", "solution_generation", "evaluation", "completed"]
            },
            "session_data": {"type": "object"},
            "next_prompt": {"type": "string"},
            "available_commands": {"type": "array", "items": {"type": "string"}}
          },
          "required": ["session_id", "current_stage"]
        }
      }
    ],
    "prompts": [
      {
        "name": "triz_master_prompt",
        "description": "Master system prompt for TRIZ Engineering Co-Pilot",
        "arguments": [
          {
            "name": "mode",
            "description": "Operating mode",
            "required": true
          }
        ]
      },
      {
        "name": "workflow_stage_prompt", 
        "description": "Stage-specific prompts for guided workflow",
        "arguments": [
          {
            "name": "stage",
            "description": "Current workflow stage",
            "required": true
          },
          {
            "name": "context",
            "description": "Session context data",
            "required": false
          }
        ]
      }
    ]
  }
}